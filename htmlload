<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HTMLコードダウンローダー</title>
    <!-- Tailwind CSS CDNを読み込み --><script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #e2e8f0; /* Light Slate */
        }
        .container-main {
            max-width: 900px;
            margin: 0 auto;
        }
        #code-input {
            /* 画面サイズに合わせて高さを柔軟に調整 */
            min-height: 450px; 
            font-family: 'Fira Code', 'Monaco', 'Consolas', monospace; /* More code-friendly font */
            font-size: 0.95rem;
            line-height: 1.5;
            tab-size: 4;
            white-space: pre-wrap; /* Allow wrapping */
            overflow: auto;
            resize: vertical; /* Only vertical resize */
        }
    </style>
</head>
<body class="p-4 lg:p-8">

    <header class="text-center mb-8">
        <h1 class="text-4xl font-extrabold text-gray-900 leading-tight">
            HTMLコード <span class="text-green-600">ダウンローダー</span>
        </h1>
        <p class="mt-2 text-lg text-gray-600">
            入力したHTMLコードをファイルとしてすぐにダウンロードできます。
        </p>
    </header>

    <div class="container-main">
        <!-- メインコンテンツ（単一カラム） --><div class="flex flex-col space-y-6 bg-white p-6 rounded-xl shadow-2xl border border-gray-200">
            
            <!-- 1. コード入力エリア -->
            <label for="code-input" class="text-xl font-semibold text-gray-800 border-b pb-2">
                1. HTMLコードを入力してください
            </label>
            <textarea id="code-input" 
                      class="p-5 border border-gray-300 rounded-lg shadow-inner focus:ring-green-500 focus:border-green-500 transition duration-150 ease-in-out flex-grow" 
                      placeholder="例:
<!DOCTYPE html>
<html lang='ja'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title>ダウンロードファイル</title>
</head>
<body>
    <h1>これでファイルを保存できます。</h1>
    <p>コードが完成したら、下のボタンを押してください。</p>
</body>
</html>"></textarea>

            <!-- 2. ファイル名入力 --><div class="flex flex-col sm:flex-row items-center space-y-3 sm:space-y-0 sm:space-x-4">
                <label for="file-name" class="font-medium text-gray-700 whitespace-nowrap text-lg">
                    2. ファイル名:
                </label>
                <!-- 修正箇所: value="group0" に変更 --><input type="text" id="file-name" value="group0"
                       class="p-3 border border-gray-300 rounded-md shadow-sm flex-grow focus:ring-green-500 focus:border-green-500"
                       placeholder="ファイル名（例: mypage）">
                <span class="font-medium text-gray-700">.html</span>
            </div>

            <!-- 3. ダウンロードボタン --><div class="mt-4">
                <button id="download-button" disabled
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg transition duration-200 transform hover:scale-[1.005] focus:outline-none focus:ring-4 focus:ring-green-400 focus:ring-opacity-75 disabled:opacity-50 disabled:cursor-not-allowed text-xl">
                    <svg class="inline-block w-6 h-6 mr-3 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                    3. HTMLファイルをダウンロード
                </button>
            </div>

            <!-- ステータスメッセージ --><div id="status-message" class="mt-4 p-4 bg-gray-50 border border-gray-200 rounded-lg text-sm text-gray-700 min-h-[3rem] flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <span class="status-text">ステータス: HTMLコードを入力してください。コードを記述すると、ダウンロードボタンが有効になります。</span>
            </div>
        </div>
    </div>

    <footer class="text-center mt-8 text-gray-500 text-sm">
        <p>&copy; 2023 HTML Downloader. All rights reserved.</p>
    </footer>

    <script>
        const codeInput = document.getElementById('code-input');
        const fileNameInput = document.getElementById('file-name');
        const downloadButton = document.getElementById('download-button');
        const statusMessageDiv = document.getElementById('status-message');
        const statusText = statusMessageDiv.querySelector('.status-text');
        const statusIcon = statusMessageDiv.querySelector('svg');

        /**
         * ステータスメッセージを更新するヘルパー関数
         * @param {string} message - 表示するメッセージ
         * @param {string} type - 'info', 'success', 'error'
         */
        function updateStatus(message, type = 'info') {
            statusText.textContent = message;
            statusMessageDiv.className = 'mt-4 p-4 rounded-lg text-sm min-h-[3rem] flex items-center';
            statusIcon.className = 'w-5 h-5 mr-2 -mt-1';

            if (type === 'success') {
                statusMessageDiv.classList.add('bg-green-100', 'border-green-400', 'text-green-700');
                statusIcon.classList.add('text-green-500');
                statusIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
            } else if (type === 'error') {
                statusMessageDiv.classList.add('bg-red-100', 'border-red-400', 'text-red-700');
                statusIcon.classList.add('text-red-500');
                statusIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
            } else { // info
                statusMessageDiv.classList.add('bg-gray-50', 'border-gray-200', 'text-gray-700');
                statusIcon.classList.add('text-gray-400');
                statusIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>';
            }
        }

        /**
         * 入力内容をチェックし、ダウンロードボタンの状態を更新する
         */
        function checkInputAndToggleDownload() {
            const code = codeInput.value.trim();
            if (code.length > 0) {
                downloadButton.disabled = false;
                updateStatus('ステータス: ダウンロードの準備ができました。ファイル名を確認してボタンを押してください。', 'info');
            } else {
                downloadButton.disabled = true;
                updateStatus('ステータス: HTMLコードを入力してください。コードを記述すると、ダウンロードボタンが有効になります。', 'info');
            }
        }

        /**
         * 入力されたコードをHTMLファイルとしてダウンロードする
         */
        function downloadHtmlFile() {
            const code = codeInput.value;
            let fileName = fileNameInput.value.trim() || 'index';
            
            if (!code.trim()) {
                updateStatus('ダウンロードするHTMLコードがありません。コードを入力してください。', 'error');
                return;
            }

            // ファイル名に.html拡張子を追加
            if (!fileName.toLowerCase().endsWith('.html')) {
                fileName += '.html';
            }

            // Blobを作成し、ダウンロードをトリガー
            const blob = new Blob([code], { type: 'text/html;charset=utf-8' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = fileName;
            
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);

            URL.revokeObjectURL(url);
            
            updateStatus(`ステータス: ファイル「${fileName}」を正常にダウンロードしました！`, 'success');
        }

        // イベントリスナーの設定
        // 入力があるたびにダウンロードボタンの状態をチェック
        codeInput.addEventListener('input', checkInputAndToggleDownload);
        downloadButton.addEventListener('click', downloadHtmlFile);

        // 初期ロード時にチェックを実行
        window.onload = checkInputAndToggleDownload;
    </script>
</body>
</html>
